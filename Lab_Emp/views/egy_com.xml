<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="view_egycom_form" model="ir.ui.view">
            <field name ="name">egycom.view.form</field>
            <field name ="model">egycom</field>
            <field name="arch" type="xml">
                <form>
                <sheet>
                    <group>
                         <field name="name"/>

                    </group>
                </sheet>
                </form>



            </field>
        </record>

         <record id="view_egycom_tree" model="ir.ui.view">
            <field name ="name">egycom.view.tree</field>
            <field name ="model">egycom</field>
             <field name="arch" type="xml">
                 <tree>
                  <field name="name"/>

                 </tree>
            </field>
        </record>
 <record id="actions_egycom_view" model="ir.actions.act_window">
            <field name ="name">الشركات المصرية</field>
            <field name ="res_model">egycom</field>
            <field name="view_mode">tree,form</field>

        </record>



    </odoo>